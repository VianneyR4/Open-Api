            "ApiKeyAuth": []
          }
        ],
        "parameters": [
          {
            "name": "zone_id",
            "in": "query",
            "description": "Filter by zone ID",
            "schema": {
              "type": "integer"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Stats"
                },
                "example": {
                  "total_collecteurs": 50,
                  "actifs": 45,
                  "inactifs": 5,
                  "total_batiments": 5000,
                  "total_batiments_validees": 4000,
                  "avg_avancement": 80.5
                }
              }
            }
          },
          "401": {
            "$ref": "#/components/responses/Unauthorized"
          },
          "500": {
            "$ref": "#/components/responses/InternalError"
          }
        }
      }
    },
